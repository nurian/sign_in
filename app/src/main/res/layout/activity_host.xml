<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nuri.dooropen.HostActivity">

    <VideoView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/videoView"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        />


    <Button
        android:text="Video Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="#ff2fa0ff"
        android:onClick="onButton3Clicked"
        android:textSize="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/switch1"
        android:layout_alignParentEnd="true" />

    <Switch
        android:text="Door Open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:checked="false"
        android:onClick="onButton4Clicked"
        android:textSize="18dp"

        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/button" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignBottom="@+id/videoView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>